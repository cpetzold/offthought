<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN"
  "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html>
  <head>
    <title><%= page_title %></title>
    <%= stylesheet_link_tag 'application' %>
    <%= stylesheet_link_tag 'post' %>
    <%= yield(:head) %>
  </head>
  <body>
    <div id="container">
      <div id="header">

        <ul id="menu">
          <% if current_user %>
            <li><span>Welcome, <%= link_to current_user.username, current_user %></span></li>
            <li><%= link_to "Logout", logout_path, :class => 'logout' %></li>
          <% else %>
            <li><%= link_to "Join", join_path, :class => 'join' %></li>
            <li><%= link_to "Login", login_path, :class => 'login' %></li>
          <% end %>
          
          <li><%= link_to "Posts", posts_path %></li>
          <li><%= link_to "Users", users_path %></li>
          <li><%= link_to "OffThought", root_path, :class => 'home' %></li>
        </ul>
      </div>
      <div id="content">

        <%- flash.each do |name, msg| -%>
          <%= content_tag :div, msg, :id => "flash_#{name}" %>
        <%- end -%>
      
        <%- if show_title? -%>
          <div id="title"><h1><%=h yield(:title) %></h1></div>
        <%- end -%>
      
        <%= yield %>
      </div>
    </div>
    
    <%= javascript_include_tag :defaults %>
    <%= javascript_include_tag 'jquery.corners' %>
    <%= javascript_include_tag 'jquery.rte' %>
  </body>
</html>
