<% title 'New Post' %>

<% form_for @post do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description, :rows => 5 %>
  </p>
  <p>
    <%= f.label :category %><br />
    <%= collection_select(:category, :id, @categories, :id, :name) %>
  </p>
  <p>
    <%= f.label :body %><br />
    <%= f.text_area :body, :class => 'rte' %>
  </p>
  <p>
    <%= f.label "Are you human? #{@post.captcha.task} = ?" %><br />
    <%= f.text_field :captcha_solution %>
    <%= f.hidden_field :captcha_secret %>
  </p>
  <p>
    <%= f.submit 'Create' %>
    <small>
       | <%= link_to 'Cancel', posts_path %>
    </small>
  </p>
<% end %>