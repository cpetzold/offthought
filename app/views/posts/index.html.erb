<% title "Posts" %>

<% @posts.each do |post| %>
<div id="<%= post.title %>" class="post">
  <h2><%= post.title %></h2>
  <p><%= post.body %></p>
  <small>
    <%= link_to 'Show', post %> - 
    <%= link_to 'Edit', edit_post_path(post) %> - 
    <%= link_to 'Destroy', post, :confirm => 'Are you sure?', :method => :delete %>
  </small>
<% end %></div>


<%= link_to 'New post', new_post_path %>